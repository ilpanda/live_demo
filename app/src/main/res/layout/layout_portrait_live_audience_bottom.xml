<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="8dp">


    <Button
        android:id="@+id/btn_message_input"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/iv_share"
        android:layout_weight="1"
        android:background="@drawable/bg_input_msg"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="来个弹幕呗，嗷嗷"
        android:textColor="#ffebebeb"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/rly_like"
        android:src="@drawable/img_live_share"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/rly_like"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/img_portrait_like" />


        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_live_like_count"
            android:gravity="center"
            android:minWidth="14dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="1258"
            android:textColor="#fffa5e59"
            android:textSize="10sp" />

    </RelativeLayout>


</RelativeLayout>